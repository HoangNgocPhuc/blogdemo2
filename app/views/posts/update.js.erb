<% if @post.errors.any? %>
  $('.error-post').html('<%= j render("shared/error_messages", object: @post) %>')
<% else %>
  $('#myModal_<%= @post.id %>').modal('hide');
  $('#hr-<%= @post.id %>').hide();
  $('#post-<%= @post.id %>').replaceWith('<%= j render("posts/post", post: @post) %>');
<% end %>
