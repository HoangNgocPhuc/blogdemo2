<div class="container">
  <div class="row">
    <div class="col-md-8">
      <% if user_signed_in? %>
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">
          <%= t "posts.create.title" %>
        </button>
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><%= t "posts.create.title" %></h4>
              </div>
              <div class="modal-body">
                <%= render "posts/form", post: @post %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "posts.create.close" %></button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div id="list-post">
        <%= render "shared/list_post", posts: @posts %>
      </div>
    </div>
    <div class="col-md-4 hot-user">
      <div class="title"><%= t "static_pages.hot_user" %></div>
      <%= render @hot_users %>
    </div>
  </div>
</div>
