<div class="content-comment content-comment-<%= comment.id %>">
  <%= form_for comment, remote: true do |f| %>
    <div>
      <%= f.text_field :content, class: "form-control", value: comment.content, autofocus: true %>
    </div>
    </div>
      <%= f.submit t("microposts.micropost_form.submit"),
        class: "btn btn-primary hidden-submit" %>
    </div>
  <% end %>
</div>
